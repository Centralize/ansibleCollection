# OpenXPKI configuration file

[General]
# Main configuration settings
database = postgresql
log_level = info
log_file = /var/log/openxpki/openxpki.log

# Set the server hostname
server_hostname = {{ ansible_hostname }}

# Define the working directory
working_dir = /var/lib/openxpki

[Database]
# PostgreSQL database connection settings
dsn = dbi:Pg:dbname=openxpki;host=localhost
user = openxpki
password = yourpassword

[Web]
# Web interface settings
webserver = apache2
base_url = http://{{ ansible_hostname }}/openxpki

[Session]
# Session settings
session_timeout = 3600

[Log]
# Logging settings
log_file = /var/log/openxpki/openxpki.log
log_level = debug

[Security]
# Security settings
# Note: Adjust as necessary for your security requirements
enable_ssl = 1
ssl_cert = /etc/ssl/certs/your_cert.pem
ssl_key = /etc/ssl/private/your_key.pem

